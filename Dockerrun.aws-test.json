{
    "AWSEBDockerrunVersion": 2,
    "volumes": [{
            "name": "app",
            "host": {
                "sourcePath": "/media/cache"
            }
        },
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/proxy/conf.d"
            }
        }
    ],
    "containerDefinitions": [{
            "name": "app",
            "image": "933186250239.dkr.ecr.eu-west-1.amazonaws.com/tribute-server:staging",
            "environment": [{
                "name": "Container",
                "value": "Python"
            }],
            "essential": true,
            "memory": 128,
            "mountPoints": [{
                "sourceVolume": "app",
                "containerPath": "/media/cache",
                "readOnly": true
            }]
        },
        {
            "name": "nginx-proxy",
            "image": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 9999
            }],
            "links": [
                "app"
            ],
            "mountPoints": [{
                    "sourceVolume": "app",
                    "containerPath": "/media/cache",
                    "readOnly": true
                },
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                },
                {
                    "sourceVolume": "awseb-logs-nginx-proxy",
                    "containerPath": "/var/log/nginx"
                }
            ]
        }
    ]
}