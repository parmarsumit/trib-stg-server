{
    "AWSEBDockerrunVersion": 2,
    "volumes": [{
            "name": "server",
            "host": {
                "sourcePath": "/var/app/current/server"
            }
        },
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/proxy/conf.d"
            }
        }
    ],

    "containerDefinitions": [{
            "name": "app",
            "image": "933186250239.dkr.ecr.eu-west-1.amazonaws.com/tribute-server:latest",
            "essential": true,
            "memory": 128,
            "mountPoints": [{
                "sourceVolume": "server",
                "containerPath": "/var/www/html",
                "readOnly": true
            }]
        },
        {
            "name": "nginx-proxy",
            "image": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": [
                "server"
            ],
            "mountPoints": [{
                    "sourceVolume": "server",
                    "containerPath": "/server",
                    "readOnly": true
                },
                {
                    "sourceVolume": "awseb-logs-nginx-proxy",
                    "containerPath": "/var/log/nginx"
                },
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                }
            ]
        }
    ]
}